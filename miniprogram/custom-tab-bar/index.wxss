.tab-bar {
  width: 300rpx;
  margin: 0 auto;
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  height: 96rpx;
  background: #ffffff;
  display: flex;
  border-radius: 50rpx;
  /* padding-bottom: env(safe-area-inset-bottom); */
  justify-content: space-around;
  box-shadow:0rpx 0rpx 20rpx -5rpx #cdcdcd;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 27px;
  height: 27px;
}

.tab-bar-item view {
  font-size: 10px;
}
