/* pages/details.wxss */
.top_box{
  position: fixed;
  height: 152rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  background: #ffffff;
  padding-top: 50rpx;
  z-index: 999;
}
.top_box_left{
  position: absolute;
  left: 30rpx;
  display: flex;
  width: 131rpx;
  justify-content: space-between;
}
.top_box_left image{
  width: 45rpx;
  height: 46rpx;
}

.content_swiper{
  width: 100%;
  height: 530rpx;
  overflow: hidden;
  position: relative;
}
.content_swiper_box{
  width: 100%;
  height: 100%;
}
.swiper-item{
  /* background: red; */
  width: 100%;
  height: 100%;
}
/*用来包裹所有的小圆点 */
.dots {
  width: 130rpx;
  height: 20rpx;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 20rpx;
  background:rgba(0,0,0,0.3);
  left: 50%;
  transform: translateX(-50%);
  align-items: center;
  padding: 0 20rpx;
  border-radius: 20rpx;
}
/*未选中时的小圆点样式 */
.dot {
 width: 12rpx;
 height: 7rpx;
 border-radius: 10rpx;
 background-color: #cdcdcd;
}
/*选中以后的小圆点样式 */
.active {
 width: 26rpx;
 height: 7rpx;
 background-color:#ffffff;
}
.content_box{
  margin-top: 30rpx;
  padding: 0 30rpx;
}
.content_title{
  font-weight: 600;
  color: #222;
  font-size: 30rpx;
}
.content_type{
  display: flex;
}
.content_type view{
  margin-top: 20rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 5rpx;
  font-size: 24rpx;
  color: #222;
  margin-right: 10rpx;
  padding: 10rpx;
}
.content_title2{
  margin-top: 30rpx;
  font-weight: 600;
  color: #222;
  font-size: 30rpx;
}
.content_service{
}
.content_service_title{
  margin-top: 20rpx;
  background: #fd743d;
  width: 160rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  color: #ffffff;
  border-radius: 7rpx;
  line-height: 60rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  border-top: 1rpx solid #e4e4e4;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom_phone{
  background: #fef3ef;
  color: #ff743d;
  height: 100rpx;
  width: 30%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.bottom_order{
  background: #ff743d;
  color: #ffffff;
  height: 100rpx;
  width: 60%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}